# Network
# Port for the WebSocket Transport Server
VITE_TRANSPORT_PORT=3001
# IP/Host for the Transport Server (used by clients)
VITE_TRANSPORT_HOST=localhost

# Vision Engine
# Target frame rate for processing (Hz) - 10-20Hz recommended
VITE_VISION_FPS=15
# Width of the frame buffer for processing (lower = faster)
VITE_VISION_WIDTH=100
# Height of the frame buffer
VITE_VISION_HEIGHT=50
# Sample stride for pixel analysis (higher = faster but less accurate)
VITE_VISION_SAMPLE_STRIDE=4

# Adapters
# Comma-separated list of adapter types to enable: yeelight, hue, wled
ENABLED_ADAPTERS=yeelight
# Optional: Hardcoded IPs for specific adapters if discovery fails (format: TYPE_IP)
# YEELIGHT_IPS=192.168.1.5,192.168.1.6

# Logging
# Levels: debug, info, warn, error
LOG_LEVEL=info
